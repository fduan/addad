<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-3">
      <div class="card">

          <div class="card-height-indicator"></div>

          <div class="card-content">

              <div class="card-image">
                  <img src="./image.jpg" alt="Loading image...">
                  <h3 class="card-image-headline"><%= product.name %></h3>
              </div>

              <div class="card-body">
                <p><%= product.description %></p>
              </div>

              <footer class="card-footer">
                  <span class="comments-count"><%= pluralize(product.comments_count, 'comment') %></span>
                  <span class="like-count"><%= pluralize(product.likers(User).count, 'like') %></span>
              </footer>

          </div>

      </div>
    </div>
  <% end %>
</div>
