<div class="authform">
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3><%= t("devise.registrations.new.sign_up") %></h3>
    <%= f.input :name, :autofocus => true %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <div class="form-group">
   	  <%= f.button :submit, t("devise.registrations.new.sign_up"), :class => 'button right form-control' %>
	</div>
  <% end %>

  <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
  <%= link_to "Sign in with Linkedin", user_omniauth_authorize_path(:linkedin) %>
</div>
