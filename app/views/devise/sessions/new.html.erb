<div class="authform">
  <h3><%= t("devise.registrations.new.sign_in") %></h3>
  
  <div class='sign-up-social'>
    <%= link_to_with_fa_icon 'fa fa-facebook', "Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: 'button' %>
    
    <br/>

    <%= link_to_with_fa_icon 'fa fa-linkedin', "Sign in with Linkedin", user_omniauth_authorize_path(:linkedin), class: 'button' %>
  </div>
  
  <hr>

  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
      
    <%- if devise_mapping.registerable? %>
      <%= link_to t("devise.registrations.new.sign_up"), new_registration_path(resource_name), class: 'right'  %>
    <% end -%>
    <%= f.input :email, :autofocus => true %>
    
    <%- if devise_mapping.recoverable? %>
      <%= link_to t("devise.sessions.new.forgot_password"), new_password_path(resource_name), class: 'right' %>
    <% end -%>
    <%= f.input :password %>

    <div class="form-group clearfix">
      <%= f.button :submit, t("devise.sessions.new.sign_in"), :class => 'button right form-control' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <%= f.input :remember_me, :as => :boolean %>
    <% end -%>
  <% end %>
</div>
